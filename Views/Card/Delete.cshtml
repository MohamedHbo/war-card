@model war.Models.Card

@{
    ViewData["Title"] = "Delete Card";
}

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: Arial, sans-serif;
        font-size: 18px; /* تكبير الخط */
    }

    h2, h4 {
        color: #ff4d4d;
        text-shadow: 2px 2px 4px #000000; /* إضافة ظل */
    }

    h2 {
        margin-top: 20px; /* إزاحة العنوان إلى الأسفل */
        font-size: 36px; /* تكبير حجم الخط للعنوان */
    }

    h4 {
        font-size: 24px; /* تكبير حجم الخط للعنوان الفرعي */
    }

    .form-group {
        margin-top: 30px;
    }

    .btn-danger {
        background-color: #ff4d4d;
        border-color: #ff4d4d;
        padding: 10px 20px;
        font-size: 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #e60000;
            border-color: #cc0000;
        }

    .row {
        margin-top: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #ff4d4d;
        text-shadow: 1px 1px 3px #000000; /* إضافة ظل */
    }

    .col-sm-10 {
        margin-bottom: 10px;
        text-shadow: 1px 1px 3px #000000; /* إضافة ظل */
    }

    img {
        border: 3px solid #555;
        border-radius: 5px;
        padding: 5px;
        text-shadow: 1px 1px 3px #000000; /* إضافة ظل */
    }

    a {
        text-decoration: none;
        color: #ff4d4d;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #e60000;
        }
</style>

<h2>Delete Card</h2>

<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model?.Name 
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model?.Description 
        </dd>
        <dt class="col-sm-2">
            Person
        </dt>
        <dd class="col-sm-10">
            @Model?.Person?.Name 
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model?.Image))
            {
                <img src="~/uploads/@Model.Image" alt="@Model.Name" style="width: 200px; height: auto;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>
